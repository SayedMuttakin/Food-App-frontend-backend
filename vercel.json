{
  "version": 2,
  "builds": [
    {
      "src": "food-backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "food-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "food-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "food-frontend/dist/$1"
    }
  ]
} 